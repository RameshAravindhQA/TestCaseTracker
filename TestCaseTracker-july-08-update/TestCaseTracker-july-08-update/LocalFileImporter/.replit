modules = ["nodejs-20", "web", "bash"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["lsof", "unzipNLS"]

[workflows]
runButton = "Fixed Start"

[[workflows.workflow]]
name = "Start TestCaseTracker"
author = 42215223
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5000\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Fast Start"
author = 42071730
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TestCaseTracker-master"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5000\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Application"
author = 41980973
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TestCaseTracker-master && pkill -f \"node.*5000\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TestCaseTracker-master && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TestCaseTracker-master && npm run dev"

[[workflows.workflow]]
name = "Clean Restart"
author = 41966107
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TestCaseTracker-master"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5000\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

