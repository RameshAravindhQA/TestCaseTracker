modules = ["nodejs-20", "web", "bash"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
mode = "single"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5008

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 5008
externalPort = 80
