modules = ["nodejs-20", "web", "bash"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start TestCaseTracker"

[[workflows.workflow]]
name = "Start TestCaseTracker"
author = 42215223
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5008
externalPort = 80
